@model IList<MvcModels.Models.AddressSummary>

@{
    ViewBag.Title = "Addresses";
}

<h2>Addresses</h2>

@if (Model.Count == 0)
{
    using (Html.BeginForm())
    {
        for (var i = 0; i < 3; i++)
        {
            <fieldset>
                <label>Address @(i + 1)</label>
                <div><label>City:</label>@Html.Editor("[" + i + "].City")</div>
                <div><label>Country:</label>@Html.Editor("[" + i + "].Country")</div>
            </fieldset>
        }
        <button type="submit">Submit</button>
    }
}
else
{
    foreach (var summary in Model)
    {
        <p>@summary.City, @summary.Country</p>
    }
    Html.ActionLink("Back", "Address");
}
